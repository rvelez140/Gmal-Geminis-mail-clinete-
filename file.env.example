# Environment Configuration - EJEMPLO
# Copiar a .env y actualizar con valores reales

# Node Environment
NODE_ENV=production

# Application Ports
PORT=8000
PORT_FRONTEND=8173
PORT_BACKEND=7098
PORT_POSTGRES=15432
PORT_REDIS=16379

# Database
DATABASE_URL=postgresql://gemini_user:PASSWORD@postgres:5432/gemini_mail
DB_HOST=postgres
DB_PORT=5432
DB_NAME=gemini_mail
DB_USER=gemini_user
DB_PASSWORD=AUTO_GENERATED

# Redis
REDIS_URL=redis://:PASSWORD@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=AUTO_GENERATED

# JWT & Security
JWT_SECRET=AUTO_GENERATED
JWT_EXPIRY=7d

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@local.com
ADMIN_PASSWORD=AUTO_GENERATED

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=

# Application Settings
APP_NAME=Gemini Mail Enterprise
APP_VERSION=2.0.0
LOG_LEVEL=info

# Frontend Configuration
VITE_API_URL=http://localhost:7098
VITE_APP_NAME=Gemini Mail Enterprise

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Security
CORS_ORIGIN=*
RATE_LIMIT=100

# Timezone
TZ=UTC

# Docker
COMPOSE_PROJECT_NAME=gemini-mail

# ========================================
# MONITORING & OBSERVABILITY
# ========================================

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# AlertManager - Email Notifications
ALERT_EMAIL_CRITICAL=critical@example.com
ALERT_EMAIL_WARNING=warnings@example.com
ALERT_EMAIL_DATABASE=dba@example.com
ALERT_EMAIL_BACKEND=backend-team@example.com

# SMTP for AlertManager (if different from app SMTP)
# ALERT_SMTP_HOST=${SMTP_HOST}
# ALERT_SMTP_PORT=${SMTP_PORT}
# ALERT_SMTP_FROM=${SMTP_FROM}
# ALERT_SMTP_USER=${SMTP_USER}
# ALERT_SMTP_PASSWORD=${SMTP_PASSWORD}

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=gemini-mail-backend
OTEL_EXPORTER_TYPE=otlp
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
OTEL_LOG_LEVEL=info
ENVIRONMENT=production
TRACE_SAMPLING_RATE=10

# Monitoring Ports (exposed on localhost only)
PORT_PROMETHEUS=9090
PORT_GRAFANA=3001
PORT_ALERTMANAGER=9093
PORT_LOKI=3100
PORT_JAEGER_UI=16686
PORT_JAEGER_COLLECTOR=14268
PORT_OTEL_GRPC=4317
PORT_OTEL_HTTP=4318

# Optional: External monitoring services
# DATADOG_API_KEY=
# NEW_RELIC_LICENSE_KEY=
# SENTRY_DSN=
