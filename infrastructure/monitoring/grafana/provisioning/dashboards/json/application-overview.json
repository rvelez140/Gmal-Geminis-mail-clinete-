{
  "dashboard": {
    "title": "Gemini Mail - Application Overview",
    "tags": ["gemini-mail", "application", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "title": "System Health",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "up{job=\"backend-api\"}",
            "legendFormat": "Backend API"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "mappings": [
              {"value": 1, "text": "UP"},
              {"value": 0, "text": "DOWN"}
            ]
          }
        }
      },
      {
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"x": 6, "y": 0, "w": 9, "h": 4},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "title": "Active Users",
        "type": "stat",
        "gridPos": {"x": 15, "y": 0, "w": 3, "h": 4},
        "targets": [
          {
            "expr": "active_users_total",
            "legendFormat": "Active Users"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 3, "h": 4},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.05, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{path}}"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [1], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "name": "High Response Time",
          "notifications": []
        }
      },
      {
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active Connections"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "title": "Redis Memory Usage",
        "type": "graph",
        "gridPos": {"x": 18, "y": 4, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "Used Memory (MB)"
          }
        ],
        "yaxes": [
          {"format": "decmbytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "title": "HTTP Status Codes",
        "type": "graph",
        "gridPos": {"x": 0, "y": 10, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=\"200\"}[5m])",
            "legendFormat": "200 OK"
          },
          {
            "expr": "rate(http_requests_total{status=\"400\"}[5m])",
            "legendFormat": "400 Bad Request"
          },
          {
            "expr": "rate(http_requests_total{status=\"401\"}[5m])",
            "legendFormat": "401 Unauthorized"
          },
          {
            "expr": "rate(http_requests_total{status=\"404\"}[5m])",
            "legendFormat": "404 Not Found"
          },
          {
            "expr": "rate(http_requests_total{status=\"500\"}[5m])",
            "legendFormat": "500 Internal Error"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 10, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"backend-api\"}[5m]) * 100",
            "legendFormat": "Backend CPU %"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU Usage", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"x": 18, "y": 10, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"backend-api\"} / 1024 / 1024",
            "legendFormat": "Backend Memory (MB)"
          }
        ],
        "yaxes": [
          {"format": "decmbytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "title": "Top Endpoints by Request Count",
        "type": "table",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "topk(10, sum by (path, method) (rate(http_requests_total[5m])))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "method": "Method",
                "path": "Endpoint",
                "Value": "Req/s"
              }
            }
          }
        ]
      },
      {
        "title": "Slowest Endpoints (p95)",
        "type": "table",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, sum by (path, le) (rate(http_request_duration_seconds_bucket[5m]))))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "le": true},
              "indexByName": {},
              "renameByName": {
                "path": "Endpoint",
                "Value": "Duration (s)"
              }
            }
          }
        ]
      }
    ]
  },
  "overwrite": true
}
