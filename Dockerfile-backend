# Backend Dockerfile - Gemini Mail Enterprise

# Build stage - for any build dependencies
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including devDependencies for build)
RUN npm ci

# Copy application code
COPY . .

# Create logs directory
RUN mkdir -p logs

# Production stage
FROM node:20-alpine

WORKDIR /app

# Install PM2 for production process management
RUN npm install -g pm2

# Copy package files
COPY package*.json ./

# Install production dependencies only
RUN npm ci --only=production && \
    npm cache clean --force

# Copy application code from builder
COPY --from=builder /app/src ./src
COPY --from=builder /app/logs ./logs

# Copy PM2 ecosystem configuration
COPY ecosystem.config.js ./

# Create logs directory if not exists
RUN mkdir -p logs

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
  CMD node -e "require('http').get('http://localhost:8000/api/health', (r) => {if (r.statusCode !== 200) throw new Error(r.statusCode)})"

# Start application with PM2 in cluster mode using ecosystem file
CMD ["pm2-runtime", "start", "ecosystem.config.js"]
