# Gemini Mail Enterprise - Environment Variables
# Copy this file to .env and configure with your actual values

# ============================================================================
# SECURITY WARNING:
# - NEVER commit .env file to version control
# - Use strong, randomly generated passwords
# - Rotate secrets regularly
# ============================================================================

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info

# Frontend Configuration
VITE_API_URL=http://localhost/api
VITE_APP_NAME=Gemini Mail Enterprise

# Admin Account (Initial Setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@your-domain.com

# Database Configuration (for reference - actual passwords in secrets/)
# POSTGRES_USER is set in docker-compose.yml
# POSTGRES_PASSWORD is in secrets/db_password.txt

# Redis Configuration (for reference - actual password in secrets/)
# REDIS_PASSWORD is in secrets/redis_password.txt

# JWT Configuration (for reference - actual secret in secrets/)
# JWT_SECRET is in secrets/jwt_secret.txt

# Docker Resource Limits (can be adjusted based on your server)
# Defined in docker-compose.yml deploy.resources sections

# ============================================================================
# SECRETS MANAGEMENT
# ============================================================================
# Actual secrets are stored in the secrets/ directory:
# - secrets/db_password.txt      (PostgreSQL password)
# - secrets/redis_password.txt   (Redis password)
# - secrets/jwt_secret.txt       (JWT signing secret)
#
# Generate strong secrets with:
#   openssl rand -base64 32
# ============================================================================

# SSL/TLS Configuration (when using HTTPS)
# Place certificates in nginx/ssl/
# - nginx/ssl/cert.pem
# - nginx/ssl/key.pem

# Backup Configuration (optional)
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# Email Configuration (if using email features)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your-email@domain.com
# SMTP_FROM=noreply@your-domain.com
# Note: SMTP_PASSWORD should be in secrets/smtp_password.txt

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Grafana Dashboard
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin  # CHANGE THIS IN PRODUCTION!

# AlertManager - Email Notifications
ALERT_EMAIL_CRITICAL=critical@your-domain.com
ALERT_EMAIL_WARNING=warnings@your-domain.com
ALERT_EMAIL_DATABASE=dba@your-domain.com
ALERT_EMAIL_BACKEND=backend-team@your-domain.com

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=gemini-mail-backend
OTEL_EXPORTER_TYPE=otlp
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
OTEL_LOG_LEVEL=info
ENVIRONMENT=production
TRACE_SAMPLING_RATE=10  # Percentage of traces to sample (10% default)

# Monitoring Ports (exposed on localhost only by default)
PORT_PROMETHEUS=9090
PORT_GRAFANA=3001
PORT_ALERTMANAGER=9093
PORT_LOKI=3100
PORT_JAEGER_UI=16686
PORT_JAEGER_COLLECTOR=14268
PORT_OTEL_GRPC=4317
PORT_OTEL_HTTP=4318

# External Monitoring Services (optional)
# DATADOG_API_KEY=your-datadog-api-key
# NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
# SENTRY_DSN=https://your-sentry-dsn
# ELASTIC_APM_SERVER_URL=http://your-apm-server:8200
